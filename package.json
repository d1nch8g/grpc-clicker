{
  "name": "grpc-clicker",
  "displayName": "gRPC Clicker",
  "description": "Call gRPC services directly from VSCode",
  "icon": "images/logo.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.68.0"
  },
  "publisher": "Dancheg97",
  "author": {
    "name": "Dancheg97",
    "email": "dangdancheg@gmail.com",
    "url": "https://github.com/Dancheg97"
  },
  "publishConfig": {},
  "repository": "https://github.com/Dancheg97/grpclicker_vscode",
  "categories": [
    "Testing",
    "Visualization",
    "Other",
    "Keymaps"
  ],
  "tags": [
    "grpc",
    "grpcurl",
    "tests",
    "rpc",
    "client"
  ],
  "activationEvents": [
    "onView:protos",
    "onCommand:protos.add",
    "onCommand:protos.refresh",
    "onView:history",
    "onCommand:history.clean",
    "onView:collections",
    "onCommand:collections.create",
    "onWebviewPanel:callgrpc"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "grpc-clicker",
          "title": "gRPC Clicker",
          "icon": "images/logo.svg"
        }
      ]
    },
    "views": {
      "grpc-clicker": [
        {
          "id": "protos",
          "name": "proto groups"
        },
        {
          "id": "collections",
          "name": "collections"
        },
        {
          "id": "history",
          "name": "request history"
        }
      ]
    },
    "commands": [
      {
        "category": "gRPC Clicker",
        "command": "collections.create",
        "title": "Create new collection of tests",
        "icon": "$(settings-add)"
      },
      {
        "category": "gRPC Clicker",
        "command": "history.clean",
        "title": "Clean history of requests",
        "icon": "$(terminal-kill)"
      },
      {
        "category": "gRPC Clicker",
        "command": "cache.clean",
        "title": "Clean all extension cache",
        "icon": "$(terminal-kill)"
      },
      {
        "category": "gRPC Clicker",
        "command": "protos.add",
        "title": "Add new proto source",
        "icon": "$(settings-add)"
      },
      {
        "category": "gRPC Clicker",
        "command": "protos.refresh",
        "title": "Refresh schemas",
        "icon": "$(extensions-refresh)"
      },
      {
        "category": "gRPC Clicker",
        "command": "protos.remove",
        "title": "Remove proto source",
        "icon": "$(terminal-kill)"
      },
      {
        "category": "gRPC Clicker",
        "command": "colections.run",
        "title": "Run collection",
        "icon": "$(testing-run-icon)"
      },
      {
        "category": "gRPC Clicker",
        "command": "colections.remove",
        "title": "Remove collection",
        "icon": "$(terminal-kill)"
      },
      {
        "category": "gRPC Clicker",
        "command": "tests.remove",
        "title": "Remove collection",
        "icon": "$(terminal-kill)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "protos.add",
          "when": "view == protos",
          "group": "navigation"
        },
        {
          "command": "protos.refresh",
          "when": "view == protos",
          "group": "navigation"
        },
        {
          "command": "history.clean",
          "when": "view == history",
          "group": "navigation"
        },
        {
          "command": "collections.create",
          "when": "view == collections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "colections.run",
          "when": "view == collections && viewItem == collection",
          "group": "inline"
        },
        {
          "command": "colections.remove",
          "when": "view == collections && viewItem == collection",
          "group": "inline"
        },
        {
          "command": "tests.remove",
          "when": "view == collections && viewItem == test",
          "group": "inline"
        },
        {
          "command": "protos.remove",
          "when": "view == protos && viewItem == proto",
          "group": "inline"
        }
      ]
    },
    "configuration": [
      {
        "title": "gRPC Clicker",
        "properties": {
          "grpc-clicker.msgsize": {
            "title": "Maximum message size to recieve",
            "type": "integer",
            "default": 4,
            "markdownDescription": "The maximum encoded size of a *response* message, in bytes, that grpcurl will accept. Default is `4 mb`."
          },
          "grpc-clicker.reflectTimeout": {
            "title": "Max time to get server description",
            "type": "number",
            "default": 0.5,
            "markdownDescription": "Max time of execution for proto reflect server description calls"
          }
        }
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+r",
        "command": "workbench.view.extension.grpc-clicker"
      }
    ]
  },
  "scripts": {
    "serve-grpc": "go run server/main.go",
    "watch-webview": "node daemon.js",
    "package-ext": "vsce package",
    "generate-proto": "protoc --go_out=server/ --go-grpc_out=server/ server/api.proto",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "cov": "jest --collectCoverage",
    "installModules": "npm i"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.6",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.21",
    "@types/unzip-stream": "^0.3.1",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.15.15",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "jest": "^28.1.3",
    "mocha": "^9.2.2",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.4.1",
    "typescript": "^4.6.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "@types/follow-redirects": "^1.14.1",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "fs-extra": "^10.1.0",
    "open": "^8.4.0",
    "unzip-stream": "^0.3.1",
    "uuid": "^9.0.0",
    "vsce": "^2.14.0"
  }
}
